<Window x:Class="PhotoCuller.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="Photo Culler" Height="820" Width="1200" MinHeight="640" MinWidth="920"
        Background="#F6F1E7" PreviewKeyDown="Window_KeyDown" Loaded="Window_Loaded">
    <Window.Resources>
        <Style TargetType="Button">
            <Setter Property="Padding" Value="14,8" />
            <Setter Property="Margin" Value="0" />
            <Setter Property="FontSize" Value="14" />
            <Setter Property="BorderThickness" Value="0" />
            <Setter Property="Background" Value="#E8D9C5" />
            <Setter Property="Foreground" Value="#3B2F24" />
            <Setter Property="Cursor" Value="Hand" />
        </Style>
    </Window.Resources>
    <Grid Margin="16">
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto" />
            <RowDefinition Height="*" />
            <RowDefinition Height="Auto" />
        </Grid.RowDefinitions>

        <Border Grid.Row="0" Background="#FFFDF8" CornerRadius="12" BorderBrush="#E2D6C4" BorderThickness="1" Padding="12">
            <DockPanel LastChildFill="True">
                <Button Content="フォルダーを選択" Click="SelectFolder_Click" Margin="0,0,12,0" />
                <StackPanel>
                    <TextBlock Text="対象フォルダー" FontWeight="SemiBold" Foreground="#3B2F24" />
                    <TextBlock x:Name="FolderPathText" Text="未選択" Foreground="#6A5D4B" TextTrimming="CharacterEllipsis" />
                    <TextBlock x:Name="TrashPathText" Text="移動先: -" Foreground="#8B7A66" FontSize="12" TextTrimming="CharacterEllipsis" />
                </StackPanel>
            </DockPanel>
        </Border>

        <Border Grid.Row="1" Margin="0,16" Background="#FFFDF8" CornerRadius="16" BorderBrush="#E2D6C4" BorderThickness="1">
            <Grid>
                <Image x:Name="PreviewImage" Stretch="Uniform" Margin="12" />
                <TextBlock x:Name="NoPreviewText" Text="プレビューが表示できません" Visibility="Collapsed"
                           FontSize="20" Foreground="#A07850" HorizontalAlignment="Center" VerticalAlignment="Center"
                           TextAlignment="Center" />
            </Grid>
        </Border>

        <Border Grid.Row="2" Background="#FFFDF8" CornerRadius="12" BorderBrush="#E2D6C4" BorderThickness="1" Padding="12">
            <Grid>
                <Grid.ColumnDefinitions>
                    <ColumnDefinition Width="*" />
                    <ColumnDefinition Width="Auto" />
                </Grid.ColumnDefinitions>
                <StackPanel Orientation="Horizontal" VerticalAlignment="Center">
                    <Button x:Name="KeepButton" Content="いる (K / → / Space)" Click="Keep_Click" IsEnabled="False" />
                    <Button x:Name="RejectButton" Content="いらない (D / Delete)" Click="Reject_Click" IsEnabled="False"
                            Margin="12,0,0,0" Background="#B85C38" Foreground="White" />
                    <Button x:Name="UndoButton" Content="元に戻す (U)" Click="Undo_Click" IsEnabled="False" Margin="12,0,0,0" />
                </StackPanel>
                <StackPanel Grid.Column="1" HorizontalAlignment="Right" VerticalAlignment="Center">
                    <TextBlock x:Name="StatusText" Text="0 / 0" FontWeight="SemiBold" HorizontalAlignment="Right" />
                    <TextBlock x:Name="FileNameText" Text="" Foreground="#6A5D4B" TextTrimming="CharacterEllipsis"
                               MaxWidth="420" HorizontalAlignment="Right" />
                </StackPanel>
            </Grid>
        </Border>
    </Grid>
</Window>
